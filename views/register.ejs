<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SolarTrack Pro - Sign In</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="login.css">
</head>

<body>
    <!-- Brand Section -->
    <div class="brand-section">
        <div class="brand-content">
            <div class="brand-logo">
                <h1><i class="fas fa-solar-panel"></i></h1>
            </div>
            <h1 class="brand-title">SolarTrack Pro</h1>
            <p class="brand-subtitle">Advanced solar energy monitoring and analytics platform for professional solar
                installations</p>

            <div class="stats-grid">
                <div class="stat-item">
                    <div class="stat-number">2.5M+</div>
                    <div class="stat-label">kWh Tracked</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">15K+</div>
                    <div class="stat-label">Installations</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">99.9%</div>
                    <div class="stat-label">Uptime</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Login Section -->
    <div class="login-section">
        <div class="login-container">
            <div class="login-header">
                <h2 class="login-title">Welcome!</h2>
                <p class="login-subtitle">Register your account to SolarTrack Pro</p>
            </div>

            <form class="login-form" id="loginForm" action="/register" method="POST">
                <div class="form-group">
                    <label class="form-label" for="email">Email address</label>
                    <input type="email" class="form-input" id="email" placeholder="Enter your email" required
                        autocomplete="email" name="email">
                </div>

                <div class="form-group">
                    <label class="form-label" for="password">Password</label>
                    <div class="password-group">
                        <input type="password" class="form-input" id="password" placeholder="Enter your password"
                            required autocomplete="current-password" name="password">
                        <button type="button" class="password-toggle" id="passwordToggle">
                            <i class="fa-solid fa-eye"></i>
                            <i class="fa-solid fa-eye-slash d-none"></i>
                        </button>
                    </div>
                </div>

                <!-- <div class="form-options">
                    <div class="checkbox-group">
                        <input type="checkbox" class="checkbox-input" id="remember">
                        <label class="checkbox-label" for="remember">Keep me signed in</label>
                    </div>
                    <a href="#" class="forgot-link">Forgot password?</a>
                </div> -->

                <button type="submit" class="login-btn" id="loginBtn">
                    Register
                </button>
            </form>

            <!-- <div class="divider">or continue with</div> -->

            <!-- <div class="social-login">
                <button class="social-btn" id="googleBtn">
                    <i class="fa-brands fa-google"></i> Google
                </button>
                <button class="social-btn" id="microsoftBtn">
                    <i class="fa-brands fa-microsoft"></i> Microsoft
                </button>
            </div> -->

            <div class="signup-link">
                Already to Solartrack Pro? <a href="/login">Sign In</a>
            </div>
        </div>
    </div>

    <script>
        // Password toggle functionality
        const passwordInput = document.getElementById('password');
        const passwordToggle = document.getElementById('passwordToggle');

        passwordToggle.addEventListener('click', () => {
            const eyeIcon = passwordToggle.querySelector('.fa-eye');
            const eyeSlashIcon = passwordToggle.querySelector('.fa-eye-slash');
            eyeIcon.classList.toggle('d-none');
            passwordInput.type = passwordInput.type === 'password' ? 'text' : 'password';
            eyeSlashIcon.classList.toggle('d-none');
        });

        // Social login handlers
        // document.getElementById('googleBtn').addEventListener('click', () => {
        //     console.log('Google OAuth integration');
        //     alert('Google authentication would be implemented here');
        // });

        // document.getElementById('microsoftBtn').addEventListener('click', () => {
        //     console.log('Microsoft OAuth integration');
        //     alert('Microsoft authentication would be implemented here');
        // });

        // Input validation feedback
        const inputs = document.querySelectorAll('.form-input');
        inputs.forEach(input => {
            input.addEventListener('blur', (e) => {
                if (e.target.required && !e.target.value) {
                    e.target.style.borderColor = '#ef4444';
                } else {
                    e.target.style.borderColor = '#e2e8f0';
                }
            });

            input.addEventListener('input', (e) => {
                if (e.target.style.borderColor === 'rgb(239, 68, 68)') {
                    e.target.style.borderColor = '#e2e8f0';
                }
            });
        });
    </script>
</body>

</html>